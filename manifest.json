{
	"manifest_version": 2,
	"name": "twitter share button",
	"version": "0.0.0.1",
	"description": "Put twitter share button on address bar.",
	"icons": {
		"16": "img/Twitter.png",
		"48": "img/Twitter.png",
		"128": "img/Twitter.png"
	},
	"browser_action": {
		"default_title": "twitter share",
		"default_icon": {
			"19": "img/Twitter.png"
		}
	},
	"permissions": [
		"tabs",
		"http://*/*",
		"https://*/*"
	],
	"background": {
		"scripts": [
			"src/background.js"
		],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"src/script.js"
			]
		}
	]
}